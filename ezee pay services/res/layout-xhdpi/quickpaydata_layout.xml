<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mydata_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quick Pay Data"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ProgressBar
            android:id="@+id/sync_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/syncdate_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center"
            android:lines="2"
            android:text="Last Synced\n10/10/2013" />

        <Button
            android:id="@+id/syncdata_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical|center_horizontal"
            android:text="Sync Data" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quick Pay collects all your frequently used recharge/payments data at one place, you can later use this data anytime simply selecting it from options while making a transaction"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/quickpay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit" />

    <TextView
        android:id="@+id/divider1"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/horizontaldivider"
        android:gravity="center_vertical" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="My Travel Data"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <AutoCompleteTextView
                    android:id="@+id/travelfrom_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Travel From" />

                <AutoCompleteTextView
                    android:id="@+id/travelto_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Travel To" />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="My mobile number" />

                    <EditText
                        android:id="@+id/myphonenumber1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="My mobile number"
                        android:inputType="phone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/div1"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="10dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:background="@drawable/verticaldivider"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/mynumber1alerts_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:enabled="false"
                        android:text="Set Reminder"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/mynumber1alerts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="date"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:text="My postpaid number" />

                    <EditText
                        android:id="@+id/myphonenumber2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="my postpaid"
                        android:inputType="phone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView01"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="10dp"
                    android:layout_height="49dp"
                    android:background="@drawable/verticaldivider"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/mynumber2alerts_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:enabled="false"
                        android:text="Set Reminder"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/mynumber2alerts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="date"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:text="My DTH" />

                    <EditText
                        android:id="@+id/mydth_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="My DTH"
                        android:inputType="number" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView02"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="10dp"
                    android:layout_height="49dp"
                    android:background="@drawable/verticaldivider"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/mydthalerts_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:enabled="false"
                        android:text="Set Reminder"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/mydthalerts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="date"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:text="My DataCard" />

                    <EditText
                        android:id="@+id/mydatacard_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="My DataCard"
                        android:inputType="phone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/TextView03"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="10dp"
                    android:layout_height="49dp"
                    android:background="@drawable/verticaldivider"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/mydatacardalerts_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:enabled="false"
                        android:text="Set Reminder"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/mydatacardalerts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="date"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:text="Insurance premium ID" />

                    <EditText
                        android:id="@+id/myinsurancepremium_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="premium ID" />

                    <EditText
                        android:id="@+id/myinsurancedate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="dob(DD-MM-YYYY)" />
                </LinearLayout>

                <TextView
                    android:id="@+id/TextView04"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="10dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/verticaldivider"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/insurancealerts_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="Set Reminder"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/insurancealerts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="date"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="12dp"
                        android:text="Land Line" />

                    <EditText
                        android:id="@+id/mylandlinecustno_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="Customer No"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/mylandline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="9"
                        android:enabled="false"
                        android:hint="Land Line No"
                        android:inputType="number" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView05"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="10dp"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    android:background="@drawable/verticaldivider"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/mylandlinealerts_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="Set Reminder"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/mylandlinealerts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="date"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>